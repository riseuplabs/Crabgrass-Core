- text = ""
- recipient_name = ""
- text_area = text_area_tag('post[body]', text, id: 'post_body', rows: '8', class: 'form-control')
- send_button = button_to_function(:send_button.t, send_message_function(recipient_name), class: 'btn btn-primary')

= form_tag('', id: 'say_form') do
  = formy(:simple_form) do |f|
    - f.row do |r|
      - r.label :recipient.t, 'recipient_name'
      - r.input autocomplete_recipients_field_tag('recipient_name')
    - f.row do |r|
      - r.label :message.t, 'post_body'
      - r.input text_area
    - f.buttons do |b|
      - b.button send_button


