- notify = true if notify.nil?
= page_popup_form('share') do
  .tab_area
    .share_page
      .legend= :share_page_recipients.t(page_class: :page.t)
      = render partial: 'pages/shares/add_recipient_widget'
      - if notify
        %br
        .legend= :notification.t
        = render partial: 'pages/shares/notification_message_form'
  .buttons-right
    = spinner 'popup'
    = close_modal_button
    = submit_tag :share_button.t, name: 'share_button', class: 'btn btn-primary'


